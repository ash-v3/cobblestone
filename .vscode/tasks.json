			"presentation": {
				"panel": "dedicated"
			}
		},
		{
			"label": "Protect",
			"type": "shell",
			"command": "python ./work/obsidian/tools/fw_protect.py --infile work/obsidian/firmware/gcc/main.bin --version 2 --message \"amogus\" --outfile work/obsidian/firmware/gcc/protected_firmware.bin",
			"group": "build",
			"presentation": {
				"panel": "dedicated"
			}
		},
		{
			"label": "Emulate",
