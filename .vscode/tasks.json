		{
			"label": "Make",
			"type": "shell",
			"command": "cd work/obsidian/firmware && make",
			"group": "build",
			"presentation": {
				"panel": "dedicated"
			}
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "python ./work/obsidian/tools/bl_build.py --initial-firmware work/obsidian/firmware/gcc/main.bin",
